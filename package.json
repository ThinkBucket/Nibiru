{
  "name": "Nibiru",
  "version": "0.0.0",
  "author": "Think",
  "description": "",
  "keywords": [
    "react.js",
    "component",
    "ui"
  ],
  "repository": "https://github.com/G-Explorer/Nibiru",
  "homepage": "https://ui.muwenzi.com/",
  "engines": {
    "node": ">=8.9.0",
    "npm": ">=5.2.0"
  },
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "lib": "rimraf lib && NODE_ENV=production babel src -d lib --ignore __tests__ && gulp --gulpfile config/gulpfile.js",
    "dist": "rimraf dist && webpack --progress --config config/webpack.config.js",
    "site:dist": "rimraf site/dist && SITE_ENV=production webpack --progress --config config/webpack.config.site.js",
    "site:dev": "webpack --progress --config config/webpack.config.site.js && node-dev site/server.js",
    "presite:prod": "npm i && npm run site:dist",
    "site:prod": "SITE_ENV=production pm2 start site/server.js --name earth-ui",
    "create": "node bin/create.js",
    "lint": "eslint src && eslint site",
    "fix": "eslint src --fix eslint site --fix",
    "test": "jest --config=config/jest.config.json",
    "coverage": "coveralls",
    "commit": "git-cz",
    "release": "npm run lib && npm run dist && standard-version"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "postcommit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "peerDependencies": {
    "react": ">=15.0.0",
    "react-dom": ">=15.0.0",
    "prop-types": ">=15.0.0"
  },
  "dependencies": {
    "classlist": "^1.0.1",
    "classnames": "^2.2.5",
    "invariant": "^2.2.2",
    "justified-layout": "^2.1.1",
    "react-avatar-editor": "^10.3.0",
    "react-update": "^0.4.4"
  },
  "devDependencies": {
    "@reach/router": "^1.1.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^10.0.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-import": "^1.6.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.22.0",
    "code-beautify": "0.0.11",
    "commitizen": "^2.9.6",
    "compression": "^1.7.2",
    "css-loader": "^0.28.7",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.18.1",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-react": "^7.7.0",
    "express": "^4.16.3",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.10",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "gulp": "^3.9.1",
    "gulp-replace": "^1.0.0",
    "html-loader": "^0.5.5",
    "husky": "^0.15.0-rc.8",
    "jest": "^22.4.2",
    "jest-css-modules": "^1.1.0",
    "jest-environment-jsdom-global": "^1.0.3",
    "jsx-loader": "^0.13.2",
    "less": "^2.7.3",
    "less-loader": "^3.0.0",
    "lint-staged": "^7.0.0",
    "markdown-loader": "^2.0.2",
    "marked": "^0.3.17",
    "multiparty": "^4.1.3",
    "node-dev": "^3.1.3",
    "nprogress": "^0.2.0",
    "pm2": "^2.10.1",
    "postcss-loader": "^2.0.8",
    "prop-types": "^15.6.1",
    "react": "^15.6.2",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^15.6.2",
    "react-hot-loader": "^4.0.0-rc.0",
    "react-imported-component": "^4.6.2",
    "rimraf": "^2.6.2",
    "standard": "^11.0.0",
    "standard-version": "^4.3.0",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.12.0",
    "webpack-dashboard": "^1.1.1",
    "webpack-dev-middleware": "^2.0.6",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-livereload-plugin": "^1.0.0",
    "webpack-merge": "^4.1.2"
  }
}
